3. Add.java servlet (Adding info to database) :
/*
* To change this license header, choose License Headers in Project
Properties.
* To change this template file, choose Tools | Templates
* and open the template in the editor.
*/

import java.io.*;
import javax.servlet.*;
import javax.servlet.http.*;
import java.sql.*;
public class Add extends HttpServlet{
public void doPost(HttpServletRequest request,
HttpServletResponse response) throws IOException,
ServletException{
response.setContentType("text/html");
PrintWriter out=response.getWriter();
String a1=request.getParameter("Name");
String a2=request.getParameter("Relation");
String a3=request.getParameter("DOB");
String a4=request.getParameter("Contact");
String a5=request.getParameter("Fm");
try{
Class.forName("oracle.jdbc.driver.OracleDriver");
String conURL = "jdbc:oracle:thin:@localhost:1521:xe";
String user = "System";
String pass = "Pass123";
Connection con =
DriverManager.getConnection(conURL, user, pass);
Statement stmt=con.createStatement();
String Qs="insert into Family
values('"+a1+"','"+a2+"','"+a3+"','"+a4+"','"+a5+"') ";
ResultSet rs=stmt.executeQuery(Qs);
con.commit();
con.close();
RequestDispatcher
rd=request.getRequestDispatcher("index.html");
rd.include(request, response);
out.println("<br><br>");
out.println("<br><center><h2> Info
Added</h2></center>");
}catch(Exception exe){System.out.println("Exception
caught"+" "+exe);}
}
}


4. Display.java servlet (Display data from database) :
/*
* To change this license header, choose License Headers in Project
Properties.
* To change this template file, choose Tools | Templates
* and open the template in the editor.
*/
//19BCE2250 Ishan Sagar Jogalekar
import java.io.*;
import javax.servlet.*;
import javax.servlet.http.*;
import java.sql.*;
public class Display extends HttpServlet{
public void doGet(HttpServletRequest request,
HttpServletResponse response) throws IOException,
ServletException{
PrintWriter out=response.getWriter();
response.setContentType("text/html");
try{
Class.forName("oracle.jdbc.driver.OracleDriver");
String conURL = "jdbc:oracle:thin:@localhost:1521:xe";
String user = "System";
String pass = "Pass123";
Connection con =
DriverManager.getConnection(conURL, user, pass);
Statement stmt = con.createStatement();
String Qd="select * from Family";
ResultSet rs=stmt.executeQuery(Qd);
out.println("<html>");
out.println("<head><title>Display
Data</title></head>");
out.println("<body>");
out.println("<center><h2>Family
Info</h2></center>");
out.println("<table border=\"1\"
align=\"center\"><tr><th>Name</th><th>Relation</th><th>D
OB</th><th>Contact</th><th>Family
Members</th><th>Update
Contact</th><th>Action</th></tr>");
while(rs.next()){
out.print("<form method=\"post\"
action=\"Update\">");
String N = rs.getString("NAME");
String R = rs.getString("REL");
String D = rs.getString("DOB");
String C=rs.getString("CONTACT");
String F=rs.getString("FM");
out.print("<tr><td>");
out.print(N);
out.print("</td><td>");
out.print(R);
out.print("</td><td>");
out.print(D);
// out.print("<input type='text' name='ud'
value='"+resSet.getObject(3).toString()+"'/>");
out.print("</td><td>");
out.print(C);
out.print("</td><td>");
out.print(F);
out.print("</td><td>");
//out.print("<input type=\"text\" name=\"ud\"> ");
//out.print("</td><td>");
out.print("<input type='hidden' name='un'
value='"+N+"'/>");
out.print("<input type='text' name='uc'/>");
out.print("</td><td>");
out.print("<input type='submit' value='Update'/>");
out.print("</td></tr>");
out.print("</form>");
}
con.commit();
con.close();
}catch(Exception e){out.println("Exception Caught"+" "+e);}
out.println("</body>");
}
}


5. Update.java servlet (Update Contact info in the database):
/*
* To change this license header, choose License Headers in Project
Properties.
* To change this template file, choose Tools | Templates
* and open the template in the editor.
*/
//19BCE2250 Ishan Sagar Jogalekar
import java.io.*;
import javax.servlet.*;
import javax.servlet.http.*;
import java.sql.*;
public class Update extends HttpServlet{
public void doPost(HttpServletRequest request,
HttpServletResponse response) throws IOException,
ServletException{
PrintWriter out=response.getWriter();
response.setContentType("text/html");
try{
Class.forName("oracle.jdbc.driver.OracleDriver");
String conURL = "jdbc:oracle:thin:@localhost:1521:xe";
String user = "System";
String pass = "Pass123";
Connection con =
DriverManager.getConnection(conURL, user, pass);
String c=request.getParameter("uc");
String n=request.getParameter("un");
Statement stmt = con.createStatement();
String Qu="update family set CONTACT='"+c+"' where
NAME='"+n+"'";
int r=stmt.executeUpdate(Qu);
con.commit();
con.close();
out.println("<br><br>");
out.println("<center><h2>");
out.println("Info Updated<br>");
out.println(r+"row updated");
out.println("<br>Data is updated for"+n);
out.println("</h2></center><br><br>");
RequestDispatcher
rd=request.getRequestDispatcher("index.html");
rd.include(request, response);
}catch(Exception e){out.println("Exception Caught"+" "+e);}
}
}


6. Web.xml :
<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1"
xmlns="http://xmlns.jcp.org/xml/ns/javaee"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
<servlet>
<servlet-name>Add</servlet-name>
<servlet-class>Add</servlet-class>
</servlet>
<servlet>
<servlet-name>Display</servlet-name>
<servlet-class>Display</servlet-class>
</servlet>
<servlet>
<servlet-name>Update</servlet-name>
<servlet-class>Update</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>Add</servlet-name>
<url-pattern>/Add</url-pattern>
</servlet-mapping>
<servlet-mapping>
<servlet-name>Display</servlet-name>
<url-pattern>/Display</url-pattern>
</servlet-mapping>
<servlet-mapping>
<servlet-name>Update</servlet-name>
<url-pattern>/Update</url-pattern>
</servlet-mapping>
<session-config>
<session-timeout>
30
</session-timeout>
</session-config>
</web-app>
